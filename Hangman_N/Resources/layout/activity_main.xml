
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#8111B9" android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout11">
       
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout41" />
    <Button
        android:text="New Game"
       android:layout_width="203dp"
            android:layout_height="90dp"
            android:layout_marginTop="-10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-7dp"
            android:background="#EA0BB4"
        android:id="@+id/btnNewGameScreen" />
     <Button
            android:text="High Scores"
            android:layout_width="203dp"
            android:layout_height="90dp"
            android:layout_marginTop="-10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-7dp"
            android:background="#EA0BB4"
            android:id="@+id/btnHighScores" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout31">
       
       
    </LinearLayout>
    
</LinearLayout>