<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#8111B9" android:gravity="center">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout66">
        <TextView
            android:text="Player Name "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:layout_weight="100" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout67">
        <EditText
            android:inputType="textPersonName"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:id="@+id/txtEnterName"
            android:layout_weight="50" />
       
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout68">
        <TextView
            android:text="Name" android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="50" />
        <TextView
            android:text="Score" android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:layout_weight="50" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout69">
        <Spinner
            android:id="@+id/selectPlayerSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100" android:background="#EA0BB4" android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      
         <Button
            android:text="Save Profile"  android:background="#EA0BB4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAddProfile" />
            
            
            <Button
            android:text="Start Game" android:background="#EA0BB4"
           
            android:id="@+id/btnStartGame"  android:layout_width="203dp"
            android:layout_height="90dp"
            android:layout_marginTop="-10dp" />
    </LinearLayout>
   
</LinearLayout>